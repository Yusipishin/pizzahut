{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "esnext",
        "moduleResolution": "node",

        "outDir": "./dist/",
        "noImplicitAny": true,
        "target": "es2015",
        "jsx": "react-jsx",
        "allowJs": true,
        "paths": {
            "@/*": ["./src/*"]
        },
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "types": ["vite-plugin-svgr/client", "node"]
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "exclude": ["node_modules"]
}
